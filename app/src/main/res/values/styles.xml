<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:maxWidth">50dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="parent_ratingbar"  parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name ="android:scaleX">0.5</item>
        <item name = "android:scaleY">0.5</item>
    </style>

    <style name="RatingBar_CustomColor" parent="Theme.AppCompat">
        <item name="colorControlNormal">#008000</item>
        <item name="colorControlActivated">#0000FF</item>
    </style>


</resources>

